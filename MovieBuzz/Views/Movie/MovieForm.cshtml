@model MovieBuzz.ViewModel.MoviesViewModel
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("SaveMovie", "Movie"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Movies.movieName)
        @Html.TextBoxFor(m => m.Movies.movieName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movies.ReleaseDate)
        @Html.TextBoxFor(m => m.Movies.ReleaseDate, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movies.AddedDate)
        @Html.TextBoxFor(m => m.Movies.AddedDate, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movies.GenreId)
        @Html.DropDownListFor(c => c.Movies.GenreId, new SelectList(Model.Genres, "Id", "GenreName"), "Select Genre", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movies.NumbersInStock)
        @Html.TextBoxFor(m => m.Movies.NumbersInStock, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m=>m.Movies.id)
    <button type="submit" class="btn btn-primary">Save Movie</button>
}